<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="udacity.portfolio.MainActivity"
    android:background="#e8f5e9">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/my_nanodegree_apps"
        android:gravity="center_horizontal"
        android:textSize="24sp"
        android:id="@+id/head"
        android:textColor="#ffffff"
        android:padding="10dp"
        android:background="@color/appHeading"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:text="Popular Movies"
        android:layout_width="210dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="36dp"
        android:id="@+id/popularmovies"
        android:background="@color/colorAccent"
        android:textColor="#000000"
        android:layout_below="@+id/head"
        android:layout_alignLeft="@+id/stockHawk"
        android:layout_alignStart="@+id/stockHawk" />

    <Button
        android:text="Stock Hawk"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:id="@+id/stockHawk"
        android:layout_below="@+id/popularmovies"
        android:layout_centerHorizontal="true"
        android:layout_width="210dp"
        android:background="@color/colorAccent" />

    <Button
        android:text="Build It Bigger"
        android:layout_height="wrap_content"
        android:layout_below="@+id/stockHawk"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="12dp"
        android:id="@+id/buildIt"
        android:layout_width="210dp"
        android:background="@color/colorAccent" />

    <Button
        android:text="Make Your App Material"
        android:layout_height="wrap_content"
        android:layout_below="@+id/buildIt"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="12dp"
        android:id="@+id/makeYourAppMaterial"
        android:layout_width="210dp"
        android:background="@color/colorAccent" />

    <Button
        android:text="Go Ubiquitous"
        android:layout_width="210dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/makeYourAppMaterial"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="12dp"
        android:id="@+id/goUbi"
        android:background="@color/colorAccent" />

    <Button
        android:text="Capstone My Own App"
        android:layout_width="210dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/goUbi"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="12dp"
        android:id="@+id/capstone"
        android:background="@color/colorAccent" />
</RelativeLayout>
